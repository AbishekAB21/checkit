<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Android 12+ Splash Screen theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background color for splash screen -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>

        <!-- Custom image for splash screen (replace with your own) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Remove squircle background behind icon -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Fallback background -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- (Optional) Transition to your main app theme -->
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

</resources>
